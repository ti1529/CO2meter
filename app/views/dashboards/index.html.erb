


<%= search_form_for @q, url: search_path, method: :get, html: { data: { turbo: false }} do |f| %>


    <div>
        <%= f.label "期間" %>
        <%= f.select :fiscal_year_gteq, @fiscal_years, selected: @fiscal_years.min  %>
        <span> 〜 </span>
        <%= f.select :fiscal_year_lteq, @fiscal_years, selected: @fiscal_years.max  %>
        
    </div>

    <div>
        <%= f.label :branch_id_eq, "支店名" %>
        <%= f.collection_select :branch_id_eq, @branches, :id, :name, include_blank: "指定なし"  %>
    </div>

    <%= f.submit %>
<% end %>


