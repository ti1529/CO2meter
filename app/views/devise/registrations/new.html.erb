<div class="row justify-content-center">
  <div class="col-sm-8">

    <h1><%= t('.title') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "my-4"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.hidden_field :company_id, value: current_user.company_id %>

      <div class="field row mb-3">
        <div class="col-sm-4">
          <%= f.label :name, class: "col-form-label" %>
          <span class="required-mark">※</span>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control w-auto" %>
        </div>
      </div>

      <div class="field row mb-3">
        <div class="col-sm-4">
          <%= f.label :email, class: "col-form-label" %>
          <span class="required-mark">※</span>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, autocomplete: "email", class: "form-control w-auto" %>
        </div>
      </div>

      <div class="field row mb-3">
        <div class="col-sm-4">
          <%= f.label :password, class: "col-form-label" %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <span class="required-mark">※</span>
          <% end %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-auto" %>
        </div>
      </div>

      <div class="field row mb-3">
        <div class="col-sm-4">
          <%= f.label :password_confirmation, class: "col-form-label" %>
          <span class="required-mark">※</span>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-auto" %>
        </div>
      </div>

      <div class="actions text-center my-4">
        <%= f.submit t('.sign_up'), id: "create-user", class: "btn btn-primary" %>
        <p>
          <span class="required-mark">※</span>
          がある項目は入力必須です
        </p>
      </div>
    <% end %>

    <% unless user_signed_in? %>
      <%= render "devise/shared/links" %>
    <% end %>

  </div>
</div>


