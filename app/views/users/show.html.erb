<h1><%= t ".title" %></h1>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name(:email) %>:</strong>
  <%= @user.email %>
</p>

<div>
  <%= link_to t("common.edit"), edit_user_registration_path(@user) %> |
  <%= link_to "Back", users_path %>

  <%= button_to t("common.delete"), @user, method: :delete %>
</div>
