<div id="<%= dom_id company %>">
  <p>
    <strong><%= Company.human_attribute_name(:name) %>:</strong>
    <%= company.name %>
  </p>

  <p>
    <strong><%= Company.human_attribute_name(:contact_name) %>:</strong>
    <%= company.contact_name %>
  </p>

  <p>
    <strong><%= Company.human_attribute_name(:contact_email) %>:</strong>
    <%= company.contact_email %>
  </p>

  <p>
    <strong><%= Company.human_attribute_name(:status) %>:</strong>
    <%= company.status_i18n %>
  </p>

</div>
