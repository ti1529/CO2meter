<%= form_with(model: company, class: "my-4") do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= company.errors.count %>件のエラーが発生しました </h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col-sm-4 ">
      <%= form.label :name, class: "col-form-label" %>
      <span class="required-mark">※</span>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-4">
      <%= form.label :contact_name, class: "col-form-control" %>
      <span class="required-mark">※</span>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :contact_name, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :contact_email, class: "col-sm-4 col-form-control" %>
    <div class="col-sm-8">
      <%= form.email_field :contact_email, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-4">
      <%= form.label :status, class: "col-form-control" %>
      <span class="required-mark">※</span>
    </div>
    <div class="col-sm-8">
      <%= form.select :status,
        Company.statuses.keys.map { |key| [Company.statuses_i18n[key],key]}
      %>
    </div>

  </div>

  <div class="text-center my-4">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to t("common.back"), company_path(company), class: "btn btn-outline-secondary ms-3" if controller.action_name == "edit" %>

    <p>
      <span class="required-mark">※</span>
      がある項目は入力必須です
    </p>
  </div>
<% end %>
